<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:padding="8dp"
        tools:hint="@string/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:iconifiedByDefault="false"/>

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/included"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/search"
        app:container_enable_drag="false"
        app:horizontal_interval="8dp"
        app:vertical_interval="8dp"
        app:tag_clickable="true"
        app:tag_theme="none"
        app:container_background_color="@color/cream_50"
        app:container_border_color="@color/cream_50"
        app:tag_background_color="@color/green_500"
        app:tag_text_color="@android:color/white"/>

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/excluded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/included"
        app:container_enable_drag="false"
        app:horizontal_interval="8dp"
        app:vertical_interval="8dp"
        app:tag_clickable="true"
        app:tag_theme="none"
        app:container_background_color="@color/cream_50"
        app:container_border_color="@color/cream_50"
        app:tag_background_color="@color/orange_800"
        app:tag_text_color="@android:color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/excluded"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/grid"
        app:layout_constraintBottom_toBottomOf="@id/grid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>